{
  "name": "@appmana-public/auth-proxy-integration-tests",
  "version": "0.0.1-setup.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:dependencies": "yarn workspace @appmana-public/auth-proxy-common build && yarn workspace @appmana-public/auth-proxy-backend build && yarn workspace @appmana-public/auth-proxy-frontend bundle",
    "test": "yarn build:dependencies && playwright test",
    "test:basic": "yarn build:dependencies && playwright test --grep-invert 'Keycloak'",
    "test:keycloak": "yarn build:dependencies && playwright test -c playwright.integration-keycloak-oauth2-proxy.config.ts",
    "start:dummy": "ts-node src/dummy-backend.ts",
    "start:spa": "ts-node src/spa-server.ts",
    "start:gateway": "ts-node src/upstream-gateway.ts",
    "start:proxy": "yarn build:dependencies && node ../auth-proxy-backend/build/index.js --policy ../../test-policy-integration.js --port 3000 --skip-verify",
    "start:proxy:integration-keycloak-oauth2-proxy": "yarn build:dependencies && node ../auth-proxy-backend/build/index.js --port 3001 --upstream http://127.0.0.1:9999 --policy ./test-policy-keycloak-oauth2-proxy.js"
  },
  "devDependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/http-proxy": "9.x",
    "@google/generative-ai": "^0.24.1",
    "@keycloak/keycloak-admin-client": "^26.4.7",
    "@playwright/test": "^1.41.2",
    "@types/express": "^5",
    "@types/node": "^20.11.24",
    "esbuild": "^0.27.1",
    "fastify": "^4.26.1",
    "nock": "^14.0.10",
    "openai": "^6.10.0",
    "testcontainers": "^11.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@appmana-public/auth-proxy-common": "workspace:*",
    "express": "^5.2.1",
    "http-proxy-middleware": "^3.0.5",
    "jose": "^6.1.3"
  }
}
